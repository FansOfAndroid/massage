        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.WithoutActionBar" >
        </activity>
        <activity
            android:name=".view.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".view.ErrorActivity"
            android:label="@string/title_activity_error" >
        </activity>
        <activity
            android:name=".view.IntroduceActivity"
            android:label="@string/title_activity_introduce" >
        </activity>
        <activity
            android:name=".view.ActivesActivity"
            android:label="@string/title_activity_actives" >
        </activity>
        <activity
            android:name=".view.ShowActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_show"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".view.CustomerActivity"
            android:label="@string/title_activity_customer"
            android:theme="@style/AppTheme.WithoutActionBar" >
        </activity>
        <activity
            android:name=".view.SharingActivity"
            android:label="@string/title_activity_sharing"
            android:theme="@style/AppTheme.WithoutActionBar" >
        </activity>
        <activity
            android:name=".view.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".view.AppointmentActivity"
            android:label="@string/title_activity_appointment" >
        </activity>
        <activity
            android:name=".view.AppointmentInfoActivity"
            android:label="@string/title_activity_appointmentinfo" >
        </activity>
        <activity
            android:name=".view.ArrangeActivity"
            android:label="@string/title_activity_arrange" >
        </activity>
        <activity
            android:name=".view.EducationActivity"
            android:label="@string/title_activity_education" >
        </activity>
        <activity
            android:name=".view.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
